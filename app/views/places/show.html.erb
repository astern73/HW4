<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @place["name"] %></h1>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Entry</a>
</div>

<h2 class="mb-4">My Entries</h2>

<div class="row">
  <% for entry in @entries %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
          <p class="card-text"><%= entry["description"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @entries.empty? %>
  <div class="text-center py-5">
    <p class="text-muted">No entries yet for this place. Create your first entry!</p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success">Add Your First Entry</a>
  </div>
<% end %>

<div class="mt-4">
  <a href="/places" class="btn btn-outline-secondary">Back to All Places</a>
</div>