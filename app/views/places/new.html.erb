<div class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="mb-4">New Place</h1>

    <form action="/places" method="post">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      
      <div class="mb-3">
        <label for="name_input" class="form-label">Place Name</label>
        <input type="text" name="name" id="name_input" class="form-control" placeholder="Enter place name" required>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="/places" class="btn btn-outline-secondary me-md-2">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Place</button>
      </div>
    </form>
  </div>
</div>