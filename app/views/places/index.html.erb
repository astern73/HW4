<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Places</h1>
  <a href="/places/new" class="btn btn-primary">New Place</a>
</div>

<div class="row">
  <% for place in @places %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= place["name"] %></h5>
          <a href="/places/<%= place["id"] %>" class="btn btn-outline-primary">View Entries</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @places.empty? %>
  <div class="text-center py-5">
    <p class="text-muted">No places yet. Create your first place to get started!</p>
    <a href="/places/new" class="btn btn-primary">Add Your First Place</a>
  </div>
<% end %>